# MCP Client Environment Configuration
# Copy this file to .env and customize the values for your environment

# Global MCP Settings
MCP_POOL_SIZE=10
MCP_DEFAULT_TIMEOUT=30
MCP_HEALTH_MONITORING=true
MCP_LOG_LEVEL=INFO

# Bill.com MCP Server Configuration
MCP_BILL_COM_COMMAND=python3
MCP_BILL_COM_ARGS=src/mcp_server/mcp_server.py
MCP_BILL_COM_TIMEOUT=30
# MCP_BILL_COM_ENV_BILL_COM_API_KEY=your_bill_com_api_key
# MCP_BILL_COM_ENV_BILL_COM_ORG_ID=your_bill_com_org_id

# Gmail MCP Server Configuration  
MCP_GMAIL_COMMAND=python3
MCP_GMAIL_ARGS=src/mcp_server/gmail_mcp_server.py
MCP_GMAIL_TIMEOUT=20
# MCP_GMAIL_ENV_GMAIL_CREDENTIALS_PATH=path/to/gmail/credentials.json
# MCP_GMAIL_ENV_GMAIL_TOKEN_PATH=path/to/gmail/token.json

# Zoho MCP Server Configuration
MCP_ZOHO_COMMAND=python3
MCP_ZOHO_ARGS=src/mcp_server/zoho_mcp_server.py
MCP_ZOHO_TIMEOUT=25
# MCP_ZOHO_ENV_ZOHO_CLIENT_ID=your_zoho_client_id
# MCP_ZOHO_ENV_ZOHO_CLIENT_SECRET=your_zoho_client_secret
# MCP_ZOHO_ENV_ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# Salesforce MCP Server Configuration
MCP_SALESFORCE_COMMAND=python3
MCP_SALESFORCE_ARGS=src/mcp_server/salesforce_mcp_server.py
MCP_SALESFORCE_TIMEOUT=30
# MCP_SALESFORCE_ENV_SALESFORCE_ORG_ALIAS=your_salesforce_org_alias
# MCP_SALESFORCE_ENV_SALESFORCE_USERNAME=your_salesforce_username